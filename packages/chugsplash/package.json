{
  "name": "@eth-optimism/chugsplash",
  "version": "0.1.0",
  "description": "[Optimism] ChugSplash deployment system",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "yarn build:contracts && yarn build:typescript",
    "build:contracts": "npx hardhat compile",
    "build:typescript": "tsc -p tsconfig.build.json",
    "test": "npx hardhat test",
    "lint:ts:check": "eslint .",
    "lint:contracts:check": "yarn solhint -f table 'contracts/**/*.sol'",
    "lint:check": "yarn lint:contracts:check && yarn lint:ts:check",
    "lint:ts:fix": "eslint --fix .",
    "lint:contracts:fix": "prettier --write 'contracts/**/*.sol'",
    "lint:fix": "yarn lint:contracts:fix && yarn lint:ts:fix",
    "lint": "yarn lint:fix && yarn lint:check",
    "clean": "rm -rf ./dist ./tsconfig.build.tsbuildinfo"
  },
  "keywords": [
    "optimism",
    "ethereum",
    "chugsplash",
    "deploy"
  ],
  "homepage": "https://github.com/ethereum-optimism/optimism/tree/develop/packages/chugsplash#readme",
  "license": "MIT",
  "author": "Optimism PBC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethereum-optimism/optimism.git"
  },
  "dependencies": {
    "@eth-optimism/core-utils": "0.9.0",
    "@pinata/sdk": "^1.1.25",
    "dotenv": "^10.0.0",
    "ethers": "^5.5.4",
    "handlebars": "^4.7.7",
    "lodash": "^4.17.21",
    "merkletreejs": "^0.2.18",
    "node-fetch": "^2.6.7",
    "semver": "^7.3.5",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "4.3.2",
    "@rari-capital/solmate": "https://github.com/rari-capital/solmate.git#8f9b23f8838670afda0fd8983f2c41e8037ae6bc",
    "@types/chai": "^4.2.18",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^8.2.2",
    "@types/yargs": "^17.0.3",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-ban": "^1.5.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.1.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-unicorn": "^32.0.1",
    "ethereum-waffle": "^3.3.0",
    "hardhat": "^2.9.6",
    "hardhat-deploy": "^0.11.10",
    "mocha": "^8.4.0",
    "prettier": "^2.3.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "peerDependencies": {
    "@nomiclabs/hardhat-ethers": "^2",
    "hardhat": "^2"
  }
}
